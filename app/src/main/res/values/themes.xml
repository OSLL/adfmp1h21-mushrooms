<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mushrooms" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="colorOnBackground">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gray</item>
        <item name="colorOnBackground">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>